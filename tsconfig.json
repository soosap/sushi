{
  "include": ["./src/**/*", "./@types/**/*.d.ts"],
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "atoms/*": ["./src/components/atoms/*"],
      "molecules/*": ["./src/components/molecules/*"],
      "organisms/*": ["./src/components/organisms/*"],
      "forms/*": ["./src/components/forms/*"],
      "icons/*": ["./src/icons/*"],
      "images/*": ["./src/images/*"]
    }
  }
}
